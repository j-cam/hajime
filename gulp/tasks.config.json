{
  "server": {
    "host": "localhost",
    "port": 3000,
    "proxy": null,
    "root": "public",
    "files": ["public/**/*.css", "public/**/*.js", "public/**/*.html"],
    "open": false
  },

  "deployment": {
    "local": {
      "path": "public"
    },
    "remote": {
      "host": "YOUR HOST"
    },
    "rsync": {
      "options": "-avzh --delete -e ssh"
    }
  },

  "assets": {
    "base": "source/",
    "dest": "public/assets/"
  },
  "versioning": {
    "files": [
      "./package.json",
      "./bower.json"
    ]
  },

  "scripts": {
    "base"  : "source/scripts/",
    "main" : "source/scripts/main.js",
    "copy" : [
      "source/scripts/vendor/modernizr-2.8.3-respond-1.4.2.min.js"
    ],
    "dest"  : "public/assets/scripts/"
  },

  "styles": {
    "base" : "source/styles/",
    "files": [
      "source/styles/**/*.+(sass|scss)"
    ],
    "dest" : "public/assets/styles/"
  },

  "fonts": {
    "base" : "source/fonts/",
    "files": [
      "source/fonts/**/*"
    ],
    "dest" : "public/assets/fonts/"
  },

  "images": {
    "base" : "source/images/",
    "files": [
      "source/images/**/*.+(png|jpg|gif|svg)"
    ],
    "dest" : "public/assets/images/"
  },

  "templates": {
    "base" : "source/templates/nunjucks",
    "files": [
      "source/templates/pages/**/*.+(html|nunjucks)"
    ],
    "dest" : "public/"
  }
}