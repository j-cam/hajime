{
  "server": {
    "host": "localhost",
    "port": 3000,
    "proxy": null,
    "root": "dist",
    "files": ["dist/**/*.css", "dist/**/*.js", "dist/**/*.html"],
    "open": false
  },

  "deployment": {
    "local": {
      "path": "dist"
    },
    "remote": {
      "host": "YOUR HOST"
    },
    "rsync": {
      "options": "-avzh --delete -e ssh"
    }
  },

  "assets": {
    "base": "src/",
    "dest": "dist/assets/"
  },
  "versioning": {
    "files": [
      "./package.json",
      "./bower.json"
    ]
  },

  "scripts": {
    "base"  : "src/scripts/",
    "main" : "src/scripts/main.js",
    "copy" : [
      "src/scripts/vendor/modernizr-2.8.3-respond-1.4.2.min.js"
    ],
    "dest"  : "dist/assets/scripts/"
  },

  "styles": {
    "base" : "src/styles/",
    "files": [
      "src/styles/**/*.+(sass|scss)"
    ],
    "dest" : "dist/assets/styles/"
  },

  "fonts": {
    "base" : "src/fonts/",
    "files": [
      "src/fonts/**/*"
    ],
    "dest" : "dist/assets/fonts/"
  },

  "images": {
    "base" : "src/images/",
    "files": [
      "src/images/**/*.+(png|jpg|gif|svg)"
    ],
    "dest" : "dist/assets/images/"
  },

  "templates": {
    "base" : "src/templates/nunjucks",
    "files": [
      "src/templates/pages/**/*.+(html|nunjucks)"
    ],
    "dest" : "dist/"
  }
}